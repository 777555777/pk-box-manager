{
	"name": "pk-box-manager",
	"private": true,
	"version": "0.0.1",
	"type": "module",
	"scripts": {
		"dev": "vite dev",
		"build": "vite build",
		"preview": "deno run pre-deploy && vite preview --host",
		"prepare": "svelte-kit sync || echo ''",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"format": "prettier --write .",
		"lint": "prettier --check . && eslint .",
		"sprites": "deno run generate-ball-sprites && deno run generate-box-wallpaper-sprites && deno run generate-box-title-sprites && deno run generate-pokemon-sprites && deno run generate-form-sprites && deno run generate-shiny-pokemon-sprites && deno run generate-shiny-form-sprites",
		"generate-ball-sprites": "deno run --allow-read --allow-write --allow-run project-data/src/generate-sprites.ts --input-dir=project-data/images/balls --output-dir=static/spritesheets/util --ts-dir=src/lib/models --name=balls --tile-width=30 --column-amount=8 --max-images=50",
		"generate-box-wallpaper-sprites": "deno run --allow-read --allow-write --allow-run project-data/src/generate-sprites.ts --input-dir=project-data/images/boxes/wallpapers --output-dir=static/spritesheets/util --ts-dir=src/lib/models --name=wallpapers --tile-width=1134 --tile-height=854 --column-amount=5 --max-images=50",
		"generate-box-title-sprites": "deno run --allow-read --allow-write --allow-run project-data/src/generate-sprites.ts --input-dir=project-data/images/boxes/titles --output-dir=static/spritesheets/util --ts-dir=src/lib/models --name=titles --tile-width=812 --tile-height=161 --column-amount=4 --max-images=50",
		"generate-pokemon-sprites": "deno run --allow-read --allow-write --allow-run project-data/src/generate-sprites.ts --input-dir=project-data/images/pokemon/normal --output-dir=static/spritesheets/pokemon --name=pokemon --ts-dir=src/lib/models --tile-width=96 --column-amount=15 --max-images=300",
		"generate-form-sprites": "deno run --allow-read --allow-write --allow-run project-data/src/generate-sprites.ts --input-dir=project-data/images/pokemon/forms --output-dir=static/spritesheets/pokemon --name=forms --ts-dir=src/lib/models --tile-width=96 --column-amount=15 --max-images=300",
		"generate-shiny-pokemon-sprites": "deno run --allow-read --allow-write --allow-run project-data/src/generate-sprites.ts --input-dir=project-data/images/pokemon/shiny-normal --output-dir=static/spritesheets/shiny-pokemon --name=pokemon --tile-width=96 --column-amount=15 --max-images=300 --no-ts",
		"generate-shiny-form-sprites": "deno run --allow-read --allow-write --allow-run project-data/src/generate-sprites.ts --input-dir=project-data/images/pokemon/shiny-forms --output-dir=static/spritesheets/shiny-pokemon --name=forms --tile-width=96 --column-amount=15 --max-images=300 --no-ts",
		"webp": "cd ./static && convertWebP.sh",
		"pre-deploy": "deno task build && deno run sprites && deno run webp",
		"deploy": "./deploy.sh"
	},
	"devDependencies": {
		"@eslint/compat": "^1.3.1",
		"@eslint/js": "^9.30.1",
		"@sveltejs/adapter-auto": "^6.0.1",
		"@sveltejs/kit": "^2.22.2",
		"@sveltejs/vite-plugin-svelte": "^5.1.0",
		"eslint": "^9.30.1",
		"eslint-config-prettier": "^10.1.5",
		"eslint-plugin-svelte": "^3.10.1",
		"globals": "^16.3.0",
		"prettier": "^3.6.2",
		"prettier-plugin-svelte": "^3.4.0",
		"svelte": "^5.35.2",
		"svelte-adapter-deno": "^0.9.1",
		"svelte-check": "^4.2.2",
		"typescript": "^5.8.3",
		"typescript-eslint": "^8.35.1",
		"vite": "^7.0.1"
	}
}
