{
	"name": "pk-box-manager",
	"private": true,
	"version": "0.0.1",
	"type": "module",
	"scripts": {
		"dev": "vite dev",
		"build": "vite build",
		"preview": "deno run sprites && deno run webp && deno run build && vite preview",
		"prepare": "svelte-kit sync || echo ''",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"format": "prettier --write .",
		"lint": "prettier --check . && eslint .",
		"sprites": "deno run generate-ball-sprites && deno run generate-pokemon-sprites && deno run generate-form-sprites && deno run generate-shiny-pokemon-sprites && deno run generate-shiny-form-sprites",
		"generate-ball-sprites": "deno run --allow-read --allow-write --allow-run project-data/src/generate-sprites.ts --input-dir=project-data/images/balls --output-dir=static/spritesheets/util --ts-dir=src/lib/models --name=balls --tile-size=30 --column-amount=8 --max-images=50",
		"generate-pokemon-sprites": "deno run --allow-read --allow-write --allow-run project-data/src/generate-sprites.ts --input-dir=project-data/images/pokemon/normal --output-dir=static/spritesheets/pokemon --name=pokemon --ts-dir=src/lib/models --tile-size=96 --column-amount=15 --max-images=300",
		"generate-form-sprites": "deno run --allow-read --allow-write --allow-run project-data/src/generate-sprites.ts --input-dir=project-data/images/pokemon/forms --output-dir=static/spritesheets/pokemon --name=forms --ts-dir=src/lib/models --tile-size=96 --column-amount=15 --max-images=300",
		"generate-shiny-pokemon-sprites": "deno run --allow-read --allow-write --allow-run project-data/src/generate-sprites.ts --input-dir=project-data/images/pokemon/shiny-normal --output-dir=static/spritesheets/shiny-pokemon --name=pokemon --tile-size=96 --column-amount=15 --max-images=300 --no-ts",
		"generate-shiny-form-sprites": "deno run --allow-read --allow-write --allow-run project-data/src/generate-sprites.ts --input-dir=project-data/images/pokemon/shiny-forms --output-dir=static/spritesheets/shiny-pokemon --name=forms --tile-size=96 --column-amount=15 --max-images=300 --no-ts",
		"webp": "cd ./static && convertWebP.sh"
	},
	"devDependencies": {
		"@eslint/compat": "^1.2.5",
		"@eslint/js": "^9.18.0",
		"@sveltejs/adapter-auto": "^4.0.0",
		"@sveltejs/kit": "^2.16.0",
		"@sveltejs/vite-plugin-svelte": "^5.0.0",
		"eslint": "^9.18.0",
		"eslint-config-prettier": "^10.0.1",
		"eslint-plugin-svelte": "^2.46.1",
		"globals": "^15.14.0",
		"prettier": "^3.4.2",
		"prettier-plugin-svelte": "^3.3.3",
		"svelte": "^5.0.0",
		"svelte-check": "^4.0.0",
		"typescript": "^5.0.0",
		"typescript-eslint": "^8.20.0",
		"vite": "^6.0.0"
	}
}
